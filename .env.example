# AI User Learning System - Environment Configuration

# Copy this file to .env and update the values for your environment

# Database Configuration
DATABASE_URL=sqlite:///user_learning.db
DATABASE_ECHO=False

# Security Configuration (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here
ENCRYPTION_MASTER_KEY=your-base64-encoded-encryption-key-here

# Application Configuration
DEBUG=True
PORT=5000
HOST=0.0.0.0
FLASK_ENV=development

# Privacy and Compliance
DEFAULT_DATA_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING=True
ANONYMIZE_LOGS=True

# AI Learning Configuration
ENABLE_REAL_TIME_LEARNING=True
MIN_INTERACTIONS_FOR_LEARNING=5
LEARNING_CONFIDENCE_THRESHOLD=0.6

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Production PostgreSQL Example (uncomment and configure for production)
# DATABASE_URL=postgresql://username:password@localhost/ai_learning_db

# Redis Configuration (if using Redis for caching/sessions)
# REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# External API Keys (if integrating with external services)
# OPENAI_API_KEY=your-openai-api-key
# ANALYTICS_API_KEY=your-analytics-api-key